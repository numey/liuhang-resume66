    <script>
        // 根据您的简历内容定制的问答库
        const resumeQA = {
            "ai经验": "刘航在圣都家居期间，借助AI工具在企微上搭建客服答疑bot，通过知识库和工作流配置，初步解决设计师的初级使用问题，有效降低了集团和城市运营人员的答疑工作时长。",
            "数字化转型": "十年产品运营经验，专注线上化数字转型，参与家装业务数字化转型，经历内部成本核算线上化(从纯人工核算到线上核算)，设计师设计工具线上化项目。",
            "团队管理": "在宁波贝壳担任产品运营总监期间，带领10+30(摄影师)团队，服务宁波的加盟商团队从老板到房产经纪人的线上工具使用。",
            "产品运营方法": "深耕产品运营10年，掌握产品运营方法论、全生命周期理论、数据管理及用户分层等技能，擅长活动运营，熟练撰写PRD文档。",
            "教育背景": "河南医药大学应用心理学本科（2008.09-2012.06）。心理学背景有助于理解用户需求和行为，为产品设计提供独特视角。",
            "圣都项目": "在圣都家居装饰有限公司，推动设计师设计工具线上化项目，使用率由0到57.64%，覆盖20+城市，有效提升了工作效率。",
            "贝壳经验": "在贝壳科技工作期间，参与了加盟商saas系统从0-1的建设和运营，建立sop，为后续其他城市开城建立了基础。",
            "链家经验": "在北京链家期间，移动互联网发展初期，和AE团队一起运营链家网内容维护，运营经纪人成为小区专家，提高了内容完备度。",
            "技能特长": "产品运营、摄影、移动互联网运营。同时是得到AI学习圈老用户，手搓多个智能体，持续学习AI技术。",
            "求职意向": "寻找AI产品经理岗位，希望将十年产品运营经验与AI技术结合，推动企业数字化转型和智能化升级。"
        };
        
        // 关键词映射
        const keywordMap = {
            "ai": "ai经验",
            "人工智能": "ai经验",
            "智能": "ai经验",
            "数字化": "数字化转型",
            "转型": "数字化转型",
            "团队": "团队管理",
            "管理": "团队管理",
            "产品": "产品运营方法",
            "运营": "产品运营方法",
            "教育": "教育背景",
            "学历": "教育背景",
            "圣都": "圣都项目",
            "家居": "圣都项目",
            "贝壳": "贝壳经验",
            "链家": "链家经验",
            "技能": "技能特长",
            "能力": "技能特长",
            "求职": "求职意向",
            "意向": "求职意向",
            "工作": "求职意向"
        };
        
        document.addEventListener('DOMContentLoaded', function() {
            const chatContainer = document.getElementById('chat-container');
            const userInput = document.getElementById('user-input');
            const sendBtn = document.getElementById('send-btn');
            const apiResponseArea = document.getElementById('api-response');
            const responseContent = document.getElementById('response-content');
            
            // 发送消息函数
            function sendMessage() {
                const question = userInput.value.trim();
                if (!question) return;
                
                // 添加用户消息到聊天界面
                addMessage(question, 'user');
                userInput.value = '';
                
                // 显示"思考中"消息
                const thinkingMsg = addMessage("正在思考中...", 'ai');
                
                // 延迟后显示回答
                setTimeout(() => {
                    // 移除"思考中"消息
                    chatContainer.removeChild(thinkingMsg);
                    
                    // 获取回答
                    let answer = getAnswerFromResume(question);
                    
                    // 添加AI回答到聊天界面
                    addMessage(answer, 'ai');
                    
                    // 如果是关于AI的问题，也调用真实API
                    if (question.toLowerCase().includes('ai') || 
                        question.toLowerCase().includes('人工智能') ||
                        question.toLowerCase().includes('智能')) {
                        callCozeAPI(question);
                    }
                }, 1000);
            }
            
            // 从简历QA库获取回答
            function getAnswerFromResume(question) {
                const lowerQuestion = question.toLowerCase();
                
                // 检查是否直接匹配
                for (const key in resumeQA) {
                    if (lowerQuestion.includes(key.toLowerCase())) {
                        return resumeQA[key];
                    }
                }
                
                // 检查关键词映射
                for (const keyword in keywordMap) {
                    if (lowerQuestion.includes(keyword)) {
                        const mappedKey = keywordMap[keyword];
                        return resumeQA[mappedKey];
                    }
                }
                
                // 默认回答
                return "根据刘航的简历，他拥有十年产品运营经验，专注于数字化转型和AI工具应用。在圣都家居期间成功实施AI客服答疑系统，提升运营效率。他熟练掌握产品运营方法论、全生命周期理论，擅长团队管理和用户需求挖掘。您可以询问更具体的问题，如'AI经验'、'数字化转型'或'团队管理'等。";
            }
            
            // 添加消息到聊天框
            function addMessage(content, sender) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${sender}-message`;
                
                const avatarDiv = document.createElement('div');
                avatarDiv.className = 'avatar';
                
                const icon = document.createElement('i');
                icon.className = sender === 'ai' ? 'fas fa-robot' : 'fas fa-user';
                avatarDiv.appendChild(icon);
                
                const contentDiv = document.createElement('div');
                contentDiv.className = 'message-content';
                contentDiv.innerHTML = content;
                
                messageDiv.appendChild(avatarDiv);
                messageDiv.appendChild(contentDiv);
                
                chatContainer.appendChild(messageDiv);
                chatContainer.scrollTop = chatContainer.scrollHeight;
                
                return messageDiv;
            }
            
            // 调用Coze API（前端演示版，实际使用时需要后端代理）
            function callCozeAPI(question) {
                // 注意：在前端直接暴露API密钥是不安全的，这里仅作为演示
                // 实际部署时应通过后端服务调用API
                
                // 显示API调用状态
                apiResponseArea.classList.add('show');
                responseContent.innerHTML = "<strong>正在调用Coze API...</strong>";
                
                // 模拟API调用延迟
                setTimeout(() => {
                    // 这里应该是实际的API调用
                    // 由于安全原因，我们不会在前端直接使用您的API密钥
                    // 以下代码仅展示API调用结构
                    
                    const apiCallInfo = `
                    <strong>API调用详情：</strong><br>
                    <span style="color: #FFDD00">URL:</span> https://api.coze.cn/v1/workflows/chat<br>
                    <span style="color: #FFDD00">方法:</span> POST<br>
                    <span style="color: #FFDD00">问题:</span> "${question}"<br>
                    <span style="color: #FFDD00">Workflow ID:</span> 7596631871829393448<br>
                    <br>
                    <strong style="color: #4CAF50">✓ API调用成功（模拟）</strong><br>
                    <br>
                    <em>实际部署时，请通过后端服务调用API以确保安全。</em>
                    `;
                    
                    responseContent.innerHTML = apiCallInfo;
                }, 1500);
            }
            
            // 事件监听
            sendBtn.addEventListener('click', sendMessage);
            userInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });
            
            // 添加示例问题按钮
            const exampleQuestions = [
                "AI应用经验",
                "数字化转型案例",
                "团队管理能力",
                "教育背景"
            ];
            
            const examplesContainer = document.createElement('div');
            examplesContainer.style.marginTop = '15px';
            examplesContainer.style.display = 'flex';
            examplesContainer.style.flexWrap = 'wrap';
            examplesContainer.style.gap = '10px';
            
            exampleQuestions.forEach(question => {
                const exampleBtn = document.createElement('button');
                exampleBtn.textContent = question;
                exampleBtn.style.padding = '8px 12px';
                exampleBtn.style.background = 'rgba(255, 221, 0, 0.1)';
                exampleBtn.style.border = '1px solid rgba(255, 221, 0, 0.3)';
                exampleBtn.style.borderRadius = '15px';
                exampleBtn.style.color = '#FFDD00';
                exampleBtn.style.fontSize = '12px';
                exampleBtn.style.cursor = 'pointer';
                exampleBtn.style.transition = 'all 0.3s ease';
                
                exampleBtn.addEventListener('mouseenter', function() {
                    this.style.background = 'rgba(255, 221, 0, 0.2)';
                    this.style.transform = 'translateY(-2px)';
                });
                
                exampleBtn.addEventListener('mouseleave', function() {
                    this.style.background = 'rgba(255, 221, 0, 0.1)';
                    this.style.transform = 'translateY(0)';
                });
                
                exampleBtn.addEventListener('click', function() {
                    userInput.value = question;
                    sendMessage();
                });
                
                examplesContainer.appendChild(exampleBtn);
            });
            
            document.querySelector('.ai-input-area').parentNode.insertBefore(examplesContainer, document.querySelector('.ai-input-area'));
        });
        
        // 时间线项目点击效果
        document.querySelectorAll('.timeline-item').forEach(item => {
            item.addEventListener('click', function() {
                // 移除其他项目的active状态
                document.querySelectorAll('.timeline-item').forEach(el => {
                    el.style.boxShadow = 'none';
                });
                
                // 添加当前项目的active效果
                this.style.boxShadow = '0 0 20px rgba(255, 221, 0, 0.4)';
                
                // 获取项目信息
                const title = this.querySelector('.timeline-title').textContent;
                const data = this.querySelector('.timeline-data').textContent;
                
                // 在AI对话区显示相关信息
                setTimeout(() => {
                    addMessage(`您点击了项目：<strong>${title}</strong><br><br>${data}`, 'ai');
                }, 300);
            });
        });
        
        // 技能项目点击效果
        document.querySelectorAll('.skill-item').forEach(item => {
            item.addEventListener('click', function() {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'translateY(-3px)';
                }, 150);
                
                // 在AI对话区显示技能详情
                const skill = this.textContent;
                let description = "";
                
                if (skill.includes("AI")) {
                    description = "刘航在圣都家居期间成功应用AI工具搭建客服答疑系统，有效降低运营成本。同时是得到AI学习圈老用户，手搓多个智能体，持续探索AI技术应用。";
                } else if (skill.includes("团队")) {
                    description = "刘航在宁波贝壳担任产品运营总监期间，带领10+30人团队，有效管理跨部门协作，提升团队运营效率。";
                } else if (skill.includes("数字化")) {
                    description = "十年数字化转型经验，成功推动家装业务流程线上化，将设计师工具使用率从0提升至57.64%，覆盖20+城市。";
                } else {
                    description = `刘航在${skill}方面有丰富的实践经验，能够将其应用于产品运营的各个环节，提升整体运营效率。`;
                }
                
                setTimeout(() => {
                    addMessage(`技能：<strong>${skill}</strong><br><br>${description}`, 'ai');
                }, 300);
            });
        });
        
        // 添加消息函数（在全局可用）
        function addMessage(content, sender) {
            const chatContainer = document.getElementById('chat-container');
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}-message`;
            
            const avatarDiv = document.createElement('div');
            avatarDiv.className = 'avatar';
            
            const icon = document.createElement('i');
            icon.className = sender === 'ai' ? 'fas fa-robot' : 'fas fa-user';
            avatarDiv.appendChild(icon);
            
            const contentDiv = document.createElement('div');
            contentDiv.className = 'message-content';
            contentDiv.innerHTML = content;
            
            messageDiv.appendChild(avatarDiv);
            messageDiv.appendChild(contentDiv);
            
            chatContainer.appendChild(messageDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
            
            return messageDiv;
        }
    </script>
</body>
